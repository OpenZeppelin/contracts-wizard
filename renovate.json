{
  "extends": [
    "github>OpenZeppelin/configs"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "@openzeppelin/"
      ],
      "schedule": [
        "at any time"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "matchManagers": [
        "regex"
      ],
      "groupName": "import_map (esm.sh)"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)import_map\\.json$"
      ],
      "matchStrings": [
        "\"[^\"]+\"\\s*:\\s*\"https://esm\\.sh/(?<depName>(?:@[^/@]+/)?[^@/]+)@(?<currentValue>[^\"\\?/]+)"
      ],
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ]
}
