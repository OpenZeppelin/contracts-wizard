{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "noEmit": true,
    "types": [
      "svelte"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "es2019",
      "es2019.array"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../core/*/src/**/*",
    "../common/src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ]
}
