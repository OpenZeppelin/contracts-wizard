{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2019", "es2019.array", "ES2020.BigInt"],
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "ts-node": {
    "transpileOnly": true
  }
}
